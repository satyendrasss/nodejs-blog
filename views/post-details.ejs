<!DOCTYPE html>
<html lang="en">
<head>
  <title>Blog</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="<%-process.env.BASE_URL%>/assets/css/bootstrap.min.css" rel="stylesheet">
  <script src="<%-process.env.BASE_URL%>/assets/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="<%-process.env.BASE_URL%>/assets/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
	<%-include('menu')%>
	
	<div class="container main-bg" style="min-height:490px;">
		
		<div class="row">
			<div class="col-sm-12">
				<h3>Post Details</h3>
				<p>This example adds a dropdown menu in the navbar.</p>
			</div>
			<div class="col-sm-9">
				<div class="row">
					
					<div class="col-sm-12">
						<h3><%-post.title;%></h3>
						<hr>
						<p><%-post.short_desc;%></p>
						<img class="" src="<%-process.env.BASE_URL%>/uploads/blogs/<%-post.imagepath;%>" width="90%" />
						
						<p><%-post.description;%></p>
					</div>
					<div class="col-sm-12 mt-3">
						<h3>Comments</h3>
						
						<%
							comments.forEach(function(cmnt){ %> 
						%>
						
							<div class="comment mb-2 d-flex">
								<div class="">
									<img class="avatar-img rounded-circle" src="https://placehold.jp/40x40.png" alt="">
								</div>
								
								<div class="flex-shrink-1 ms-2 ms-sm-3">
									<div class="comment-meta d-flex">
										<h6 class="me-2"><%-cmnt.name;%>   </h6>
										<span class="text-muted">at <%-custom.timeAgo(cmnt.created_at);%> ago</span>
									</div>
									<div class="comment-body">
										<%-cmnt.msg;%>
									</div>
								</div>
							</div>
						
						<% }) %>
						
						<div class="row ">
							<div class="col-sm-12" style="padding-left:5%">
								<form method="post">
									<textarea class="form-control mb-2" rows="3" name="comments" placeholder="Comments"></textarea>
									<button class="btn btn-primary float-end">Submit</button>
								</form>
							</div>
						</div>
						
					</div>
					
					
				</div>
			</div>
			<div class="col-sm-3">
				<div class="row">
					<div class="col-sm-12">
						<h3>Categories</h3>
						<hr>
						<ul class="list-group list-group-flush">
							<% categories.forEach(function(category){ %>
								<li class="list-group-item">
									<a href="<%-process.env.BASE_URL%>/post?category=<%-category.id;%>">
										<%-category.category_name;%>
									</a>
								</li>
							<% }) %>
						</ul>
					</div>
					
					<div class="col-sm-12">
						<h3>Latest Post</h3>
						<hr>
						<ul class="list-group list-group-flush latest-post">
							<% latestPosts.forEach(function(Lpost){ %>
								<li class="list-group-item">
									<img class="latest-post-img" src="<%-process.env.BASE_URL%>/uploads/blogs/<%-Lpost.imagepath;%>" />
									<a href="<%-process.env.BASE_URL%>/post/<%-Lpost.slug;%>"   class="text-decoration-none" >
										<%-Lpost.title;%>
									</a>
									<div>
										<span><i class="fa fa-calendar"></i> Jan 20, 2023</span>
										<!--<span><i class="fa fa-user"></i> Satyendra </span>-->
									</div>
								</li>
							<% }) %>
						</ul>
					</div>
					
				</div>
			</div>
			
		</div>
	
	</div>
	
	<footer class="mt-2">
		<nav class="navbar navbar-expand-sm border bg-light justify-content-center">
		  <ul class="navbar-nav">
			<li class="nav-item">
			  <a class="nav-link" href="#">Satyendra Singh</a>
			</li>
		  </ul>
		</nav>
	</footer>
	<script src="<%-process.env.BASE_URL%>/assets/js/jquery.min.js"></script>

</body>
</html>