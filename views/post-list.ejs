<!DOCTYPE html>
<html lang="en">
<head>
  <title>Blog</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="<%-process.env.BASE_URL%>/assets/css/bootstrap.min.css" rel="stylesheet">
  <script src="<%-process.env.BASE_URL%>/assets/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="<%-process.env.BASE_URL%>/assets/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
	<%-include('menu')%>
	
	<div class="container main-bg" style="min-height:490px;">
		
		<div class="row">
			<div class="col-sm-12">
				<h3>All Post</h3>
				<p>This example adds a dropdown menu in the navbar.</p>
			</div>
			<div class="col-sm-8">
				<div class="row">
					
					<% posts.forEach(function(post){ %>
					<div class="col-sm-12 mb-3">
						<div class="card card-shadow">
							<div class="card-body p-1">
								<div class="row">
									<div class="col-sm-3">
										<img class="card-img-top" src="<%-process.env.BASE_URL%>/uploads/blogs/<%-post.imagepath;%>" height="150" alt="Card image">
									</div>
									<div class="col-sm-9">
										<h5 class="card-title">
											<a href="<%-process.env.BASE_URL%>/post/<%-post.slug;%>"   class="text-decoration-none" ><%-post.title;%></a>
										</h5>
										<div>
											<span><a href="#" class="text-decoration-none" ><%-post.category_name;%></a> : </span>
											
											<span><i class="fa fa-calendar"></i> Jan 20, 2023</span>
											<span><i class="fa fa-comments-o"></i> 11</span>
											<span><i class="fa fa-user"></i> Satyendra </span>
											
										</div>
										<p class="card-text"><%-post.short_desc;%></p>
									</div>
								</div>
							</div>
						</div>
					</div>
					<% }) %>
				</div>
			</div>
			<div class="col-sm-4">
				<div class="row">
					<div class="col-sm-12">
						<h3>Categories</h3>
						<hr>
						<ul class="list-group list-group-flush">
							<% categories.forEach(function(category){ %>
								<li class="list-group-item">
									<a href="<%-process.env.BASE_URL%>/post?category=<%-category.id;%>">
										<%-category.category_name;%>
									</a>
								</li>
							<% }) %>
						</ul>
					</div>
				</div>
			</div>
		</div>
	
	</div>
	
	<footer class="mt-2">
		<nav class="navbar navbar-expand-sm border bg-light justify-content-center">
		  <ul class="navbar-nav">
			<li class="nav-item">
			  <a class="nav-link" href="#">Satyendra Singh</a>
			</li>
		  </ul>
		</nav>
	</footer>
	<script src="<%-process.env.BASE_URL%>/assets/js/jquery.min.js"></script>

</body>
</html>