<%-include('../includes/header'); %>
	
	<div class="row d-flex">
		<div  class="col-sm-6">
			<h3>Category List</h3>
		</div>
		<div  class="col-sm-6">
			<a href="<%-process.env.BASE_URL%>/category/add" class="btn btn-primary btn-sm float-end">Add New</a>
		</div>
	</div>
	
	<div class="row">
		<div class="col-sm-12">
			
			 <table class="table table-hover">
				<thead>
				  <tr>
					<th>Category Name</th>
					<th>Action</th>
				  </tr>
				</thead>
				<tbody>
					<% categories.forEach(function(category){ %>
					  <tr>
						<td><%-category.category_name;%></td>
						<td>
							<a href="<%-process.env.BASE_URL%>/category/edit/<%-category.id%>" class="btn btn-success btn-sm">
								<i class="fa fa-pencil-square-o"></i>
							</a>
							<a href="<%-process.env.BASE_URL%>/category/delete/<%-category.id%>" onclick="return confirm('Are you sure to delete?')" class="btn btn-danger btn-sm">
								<i class="fa fa-trash-o"></i>
							</a>
						</td>
					  </tr>
					<% }); %>
				</tbody>
			  </table>
		</div>
	</div>
<%-include('../includes/footer'); %>